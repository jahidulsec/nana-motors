// design database tables here
model Admin {
  id       Int        @id @default(autoincrement())
  username String     @unique
  password String
  fullName String
  Vehicle  Vehicle[]
  Customer Customer[]
  Payment  Payment[]
  Emi      Emi[]
}

model Customer {
  id         Int       @id @default(autoincrement())
  name       String
  fatherName String?
  motherName String?
  spouseName String?
  nid        String    @unique
  mobile     String
  houseName  String?
  village    String?
  postOffice String?
  upazilla   String?
  district   String?
  adminId    Int
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  Payment    Payment[]

  admin Admin @relation(fields: [adminId], references: [id], onDelete: NoAction)
}

model Vehicle {
  id            Int       @id @default(autoincrement())
  engineNo      String    @unique
  carCondition  String?   @default("new") // old, new
  sellerType    String?   @default("company") // company, user
  sellerName    String?
  sellerContact String?
  sellerAddress String?
  purchasePrice Int
  status        String    @default("available") // available, in-emi, sold
  adminId       Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  Payment       Payment[]

  admin Admin @relation(fields: [adminId], references: [id], onDelete: NoAction)

  @@index([engineNo, status])
}

model Payment {
  id           Int       @id @default(autoincrement())
  invoiceNo    String    @unique
  customerId   Int
  vehicleId    Int
  sellingPrice Int
  vehicleType  String    @default("emi") // emi, full-payment
  emiNo        Int?
  interestRate Int?
  emiDate      DateTime? @default(now())

  paidAmount Int
  adminId    Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Emi       Emi[]

  admin Admin @relation(fields: [adminId], references: [id], onDelete: NoAction)

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Restrict)
  vehicle  Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
}

model Emi {
  id            Int      @id @default(autoincrement())
  paymentId     Int
  paymentAmount Int
  method        String   @default("cash") // cash, bank-cheque, bkash, rocket, nagad
  givenBy       String?
  refeneceNo    String?
  adminId       Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  admin   Admin   @relation(fields: [adminId], references: [id], onDelete: NoAction)
  payment Payment @relation(fields: [paymentId], references: [id], onDelete: Cascade)
}
